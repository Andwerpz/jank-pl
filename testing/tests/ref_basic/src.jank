#include <jstring>;
#include <put>;

void assert(i32 x) {
    if(!x) {
        puts_endl("assert failed");
        sys_exit(1);
    }
}

void increment(i32& val) {
    val ++;
}

void basic_tests() {
    //reference binding
    {
        i32 x = 42;
        i32& ref = x;  
        assert(x == 42 && ref == 42);
        
        ref = 10;      
        assert(x == 10 && ref == 10);
    }

    //reference to reference
    {
        i32 x = 100;
        i32& ref1 = x;
        i32& ref2 = ref1;
        assert(x == ref1 && ref1 == ref2);
        
        ref2 = 200;
        assert(x == 200 && ref1 == 200 && ref2 == 200);
    }
    
    //function calls
    {
        i32 x = 5;
        increment(x);
        assert(x == 6);
    }

    //ref to array element
    {
        i32* arr = (i32*) malloc(sizeof(i32) * (u64) 5);
        i32& ref = arr[1]; 
        ref = 20;
        assert(arr[1] == 20);
    }

    //self assignment
    {
        i32 x = 5;
        i32& ref = x;
        ref = ref + 1; 
        assert(x == 6);
    }

    puts_endl("basic tests passed");
}

i32 main() {

    basic_tests();
    puts_endl("all tests passed");

    return 0;
}