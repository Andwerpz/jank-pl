}

//assignment update, sum query segment tree
struct segtree {
    i64 n;
    i64* a;

    segtree() {}
    segtree(i64 n) {
        this.n = 2 * n;
        this.a = (i64*) malloc(sizeof(i64) * 2 * n);
        for(i64 i = 0; i < 2 * n; i++) this.a[i] = 0;
    }
    segtree(segtree& other) {
        this.n = other.n;
        this.a = (i64*) malloc(sizeof(i64) * this.n);
        for(i64 i = 0; i < this.n; i++) this.a[i] = other.a[i];
    }

    //query sum of range [l, r)
    i64 query(i64 l, i64 r) {
        i64 ans = 0;
        l = l + this.n;
        r = r + this.n;
        for(; l < r;) {
            if(l % 2 == 1) {
                ans = ans + this.a[l];
                l = l + 1;
            }
            if(r % 2 == 1) {
                r = r - 1;
                ans = ans + this.a[r];
            }
            l = l / 2;
            r = r / 2;
        }
        return ans;
    }

    //a[ind] = val
    void modify(i64 ind, i64 val) {
        ind = ind + this.n;
        this.a[ind] = val;
        ind = ind / 2;
        while(ind > 0) {
            this.a[ind] = this.a[ind * 2] + this.a[ind * 2 + 1];
            ind = ind / 2;
        }
    }
}

//just a vector<i64>
struct vector {
    i64 sz;
    i64 cap;
    i64* a;

    vector() {
        this.sz = 0;
        this.cap = 1;
        this.a = (i64*) malloc(sizeof(i64) * 1);
    }

    vector(i64 n) {
        this.sz = n;
        this.cap = n;
        this.a = (i64*) malloc(sizeof(i64) * n);
        for(i64 i = 0; i < n; i = i + 1) this.a[i] = 0;
    }

    vector(vector& other) {
        this.sz = other.sz;
        this.cap = other.cap;
        this.a = (i64*) malloc(sizeof(i64) * this.cap);
        for(i64 i = 0; i < this.cap; i++) this.a[i] = other.a[i];
    }

    void pop_back() {
        if(this.sz == 0) return;
        this.sz = this.sz - 1;
    }

    void push_back(i64 x) {
        if(this.sz == this.cap) this.grow();
        this.a[this.sz] = x;
        this.sz = this.sz + 1;
    }

    void grow() {
        this.cap = this.cap * 2;
        i64* na = (i64*) malloc(sizeof(i64) * this.cap);
        for(i64 i = 0; i < this.sz; i = i + 1) {
            na[i] = this.a[i];
        }
        this.a = na;

        puts("grow : ");
        puti_endl(this.cap);
    }
}

i64& operator[](vector& arr, i64 ind) {
    return arr.a[ind];
}

//pseudorandom array
i64* gen_arr(i64 n) {
    i64* a = (i64*) malloc(sizeof(i64) * n);
    i64 mod = 100007;
    i64 ptr = 1;
    i64 mult = 67;
    i64 add = 103;
    for(i64 i = 0; i < n; i = i + 1) {
        ptr = (ptr * mult + add) % mod;
        a[i] = ptr;
    }
    return a;
}

void vector_test() {
    vector a = new vector();
    for(i64 i = 0; i < 1000000; i = i + 1) {
        a.push_back(i);
    }
    
    puts_endl("vector test passed");
}

void segt_test() {
    i64 n = 500;
    vector a = new vector(n);
    segtree b = new segtree(n);
    {
        i64* arr = gen_arr(n);
        for(i64 i = 0; i < n; i = i + 1) {
            a[i] = arr[i];
            b.modify(i, arr[i]);
        }
    }
    for(i64 i = 0; i < n; i = i + 1) {
        for(i64 j = i + 1; j <= n; j = j + 1) {
            i64 aans = 0;
            i64 bans = b.query(i, j);
            for(i64 k = i; k < j; k = k + 1) {
                aans = aans + a[k];
            }
            assert(aans == bans);
        }
    }

    puts_endl("segt test pass");
}

i64 main() {

    vector_test();
    segt_test();
    puts_endl("all tests passed");

    return 0;
}