#include <put>;
#include <jstring>;
#include <vector>;
#include <ostream>;
#include <assert>;

[0] i32 basic = 10;
[0] i32 cntr = 0;

[0] u64 arrsz = $u64 100;
[1] vector<i32> arr = new vector<i32>(arrsz, 0);

void foo() {
    cntr ++;
}

void bar() {
    cntr ++;
}

void test_basic() {
    //check that global variables can be mutated
    {
        basic += 20;
        assert(basic == 30);
    }

    //check if global variables are available in multiple functions
    {
        foo();
        foo();
        bar();
        assert(cntr == 3);
    }

    //check that structs and templates work properly
    {
        for(i32 i = 0; i < $i32 arrsz; i++){
            arr[i] = i * i;
        }
        for(i32 i = 0; i < $i32 arrsz; i++){
            assert(arr[i] == i * i);
        }
    }

    cout << "test basic passed\n";
}

i32 main() {

    test_basic();
    cout << "all tests passed\n";

    return 0;
}