    for(i32 i = 0; i < 80; i++) {
        temp1 = h + sha_Sigma1(e) + sha_Ch(e, f, g) + K[i] + W[i];
        temp2 = sha_Sigma0(a) + sha_Maj(a, b, c);
        h = g;
        g = f;
        f = e;
        e = d + temp1;
        d = c;
        c = b;
        b = a;
        a = temp1 + temp2;
    }

    ctx->state[0] += a;
    ctx->state[1] += b;
    ctx->state[2] += c;
    ctx->state[3] += d;
    ctx->state[4] += e;
    ctx->state[5] += f;
    ctx->state[6] += g;
    ctx->state[7] += h;
