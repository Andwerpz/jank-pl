// Secure Hash Algorithm 2
// https://nvlpubs.nist.gov/nistpubs/fips/nist.fips.180-4.pdf

u64 sha_ROTR(u64 x, i32 amt) {
    return (x >> $u64 amt) | (x << ($u64 64 - $u64 amt));
}

u64 sha_Sigma0(u64 x) {
    return sha_ROTR(x, 28) ^ sha_ROTR(x, 34) ^ sha_ROTR(x, 39);
}

u64 sha_Sigma1(u64 x) {
    return sha_ROTR(x, 14) ^ sha_ROTR(x, 18) ^ sha_ROTR(x, 41);
}

u64 sha_sigma0(u64 x) {
    return sha_ROTR(x, 1) ^ sha_ROTR(x, 8) ^ (x >> $u64 7);
}

u64 sha_sigma1(u64 x) {
    return sha_ROTR(x, 19) ^ sha_ROTR(x, 61) ^ (x >> $u64 6);
}

u64 sha_Ch(u64 x, u64 y, u64 z) {
    return (x & y) ^ ((~x) & z);
}

u64 sha_Maj(u64 x, u64 y, u64 z) {
    return (x & y) ^ (x & z) ^ (y & z);
}

struct sha512_ctx {
    u64 len;            // bytes hashed so far
    u64[8] state;       // internal hash state
    u8[128] block;      // partial block buffer (message block is 1024 bits)
    u64 bptr;           // bytes in the partial block
}

//out hash should be preallocated 64 bytes (512 bits)
void sha512(void* msg, u64 len, void* out_hash) {
    sha512_ctx ctx = new sha512_ctx();
    sha512_init(@ctx);
    sha512_update(@ctx, msg, len);
    sha512_final(@ctx, out_hash);
}

void sha512_init(sha512_ctx* ctx) {
    ctx->len = 0x0;
    ctx->state[0] = 0x6a09e667f3bcc908;
    ctx->state[1] = 0xbb67ae8584caa73b;
    ctx->state[2] = 0x3c6ef372fe94f82b;
    ctx->state[3] = 0xa54ff53a5f1d36f1;
    ctx->state[4] = 0x510e527fade682d1;
    ctx->state[5] = 0x9b05688c2b3e6c1f;
    ctx->state[6] = 0x1f83d9abfb41bd6b;
    ctx->state[7] = 0x5be0cd19137e2179;
    ctx->bptr = 0x0;
}

void sha512_update(sha512_ctx* ctx, void* msg, u64 len) {
    u64 ptr = 0x0;
    while(ptr < len) {
        u64 amt = len - ptr;
        if(amt > $u64 128 - ctx->bptr) amt = $u64 128 - ctx->bptr;
        memcpy($void* ($u64 @(ctx->block) + ctx->bptr), $void* ($u64 msg + ptr), amt); 
        ctx->bptr += amt;
        ctx->len += amt;
        ptr += amt;
        if(ctx->bptr == $u64 128) {
            sha512_compress(ctx);
        }
    }
}

void sha512_compress(sha512_ctx* ctx) {
    assert(ctx->bptr == $u64 128, "sha512_compress() : ctx msg block not full");
    ctx->bptr = 0x0;

    u64[80] W = new u64[80]();
    for(i32 i = 0; i < 16; i++) {
        W[i] = 
            ($u64 ctx->block[i * 8 + 0] << $u64 56) | 
            ($u64 ctx->block[i * 8 + 1] << $u64 48) | 
            ($u64 ctx->block[i * 8 + 2] << $u64 40) | 
            ($u64 ctx->block[i * 8 + 3] << $u64 32) | 
            ($u64 ctx->block[i * 8 + 4] << $u64 24) | 
            ($u64 ctx->block[i * 8 + 5] << $u64 16) | 
            ($u64 ctx->block[i * 8 + 6] << $u64 8 ) | 
            ($u64 ctx->block[i * 8 + 7] << $u64 0 ) 
        ;
    }
    for(i32 i = 16; i < 80; i++) {
        W[i] = sha_sigma1(W[i - 2]) + W[i - 7] + sha_sigma0(W[i - 15]) + W[i - 16];
    }

    u64 a = ctx->state[0];
    u64 b = ctx->state[1];
    u64 c = ctx->state[2];
    u64 d = ctx->state[3];
    u64 e = ctx->state[4];
    u64 f = ctx->state[5];
    u64 g = ctx->state[6];
    u64 h = ctx->state[7];
    u64 temp1;
    u64 temp2;
    
    //LMAO, should probably create array initializer lists
    u64[80] K = new u64[80]();
