//out hash should be preallocated 64 bytes (512 bits)
void sha512_final(sha512_ctx* ctx, void* out_hash) {
    //add 0x80 character
    if(ctx->bptr == $u64 128) {
        sha512_compress(ctx);
    }
    ctx->block[ctx->bptr ++] = $u8 0x80;

    //pad with 0x00 until ctx->bptr == 112
    while(ctx->bptr != $u64 112){
        if(ctx->bptr == $u64 128) {
            sha512_compress(ctx);
        }
        ctx->block[ctx->bptr ++] = $u8 0x0;
    }

    //write message length in bits as 128-bit big endian integer 
    u64 bitlen = ctx->len * 0x8;
    for(u64 i = 0x0; i < 0x8; i++) {
        ctx->block[ctx->bptr ++] = $u8 0x0;
    }
    for(u64 i = 0x0; i < 0x8; i++) {
        u64 shift = (0x7 - i) * 0x8;
        ctx->block[ctx->bptr ++] = $u8 ((bitlen & (0xFF << shift)) >> shift);
    }
    sha512_compress(ctx);

    //final state is hash
    for(u64 i = 0x0; i < 0x8; i++) {
        for(u64 j = 0x0; j < 0x8; j++) {
            u64 shift = (0x7 - j) * 0x8;
            ($u8* out_hash)[i * 0x8 + j] = $u8 ((ctx->state[i] & (0xFF << shift)) >> shift);
        }
    }
}
